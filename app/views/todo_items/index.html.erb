<%= render "shared/header" %>

<h1>項目一覧</h1>

<table>
  <tr>
    <th>概要</th>
    <th>完了</th>
    <th>で完了</th>
    <th>To do list</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todo_items.each do |todo_item| %>
  <tr>
    <td><%= todo_item.descricao %></td>
    <td><%= todo_item.completo %></td>
    <td><%= todo_item.completo_em %></td>
    <td><%= todo_item.todo_list %></td>
    <td><%= link_to '表示', [todo_item.todo_list, todo_item] %></td>
    <td><%= link_to '編集', edit_todo_list_todo_item_path(todo_item.todo_list, todo_item) %></td>
    <td><%= link_to '削除', [todo_item.todo_list, todo_item], method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
  </tr>
<% end %>
</table>

