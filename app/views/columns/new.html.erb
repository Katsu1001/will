<%= render "shared/header" %>
<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('show.edit.logo.png' , size: '185x60'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">情報を入力</h2>
    <%= form_with model:@column, local: true do |f| %>
     <%= render 'shared/error_messages', model: f.object %>

    <div class="img-upload">
      <div class="weight-bold-text">
        トップ画像
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <div class="new-items">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"items-text", id:"item-name", placeholder:"タイトル（必須 200文字まで)", maxlength:"200" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          詳細
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :introduction, class:"items-text", id:"item-info", placeholder:"【例】結論（何を伝えたいのか）、理由（なぜそう言えるのか）、根拠（理由を裏付けるデータ）、参考文献(動画や論文、ニュースのURL）" ,rows:"50" ,maxlength:"1000000" %>
      </div>
    </div>

    <div class="items-detail">
      <div class="weight-bold-text">分類</div>
      <div class="form">
        <div class="weight-bold-text">
          ジャンル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          トレーニングの部位
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:part_id, Part.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>
</div>
<%= render "shared/footer" %>